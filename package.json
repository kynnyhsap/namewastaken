{
  "name": "namewastaken",
  "version": "1.3.1",
  "description": "Check if a username is taken on social platforms",
  "keywords": [
    "username",
    "handle",
    "availability",
    "checker",
    "social-media",
    "tiktok",
    "instagram",
    "twitter",
    "x",
    "threads",
    "youtube",
    "cli",
    "mcp",
    "model-context-protocol"
  ],
  "author": "kynnyhsap",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kynnyhsap/namewastaken.git"
  },
  "homepage": "https://github.com/kynnyhsap/namewastaken",
  "type": "module",
  "main": "./dist/sdk.js",
  "exports": {
    ".": {
      "import": "./dist/sdk.js",
      "types": "./dist/sdk.d.ts"
    }
  },
  "bin": {
    "namewastaken": "./dist/cli.js",
    "nwt": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "cli": "bun run ./src/index.ts",
    "cli:dev": "bun --watch run ./src/index.ts",
    "build": "bun run build:sdk && bun run build:cli",
    "build:sdk": "bun build ./src/sdk.ts --outdir=dist --outfile=dist/sdk.js --target=node --format=esm",
    "build:cli": "bun build ./src/index.ts --outfile=dist/cli.js --target=node --format=esm && sed -i '' '1s|#!/usr/bin/env bun|#!/usr/bin/env node|' dist/cli.js",
    "build:types": "tsc --project tsconfig.build.json",
    "build:binary": "bun build ./src/index.ts --compile --outfile=dist/namewastaken",
    "prepublishOnly": "bun run build && bun run build:types",
    "test": "bun test",
    "fmt": "oxfmt --write src/",
    "fmt:check": "oxfmt --check src/",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "lint": "oxlint src/",
    "check": "bun run fmt:check && bun run typecheck && bun run lint && bun run test"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@hono/mcp": "^0.2.3",
    "@hono/node-server": "^1.19.9",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "commander": "^12.1.0",
    "effect": "^3.12.5",
    "hono": "^4.11.4",
    "picocolors": "^1.1.1",
    "zod": "4"
  }
}
