{
  "name": "namewastaken",
  "version": "1.0.0",
  "description": "Check if a username is taken on social platforms",
  "type": "module",
  "bin": {
    "namewastaken": "./src/index.ts"
  },
  "scripts": {
    "start": "bun run ./src/index.ts",
    "dev": "bun --watch run ./src/index.ts",
    "build": "bun build ./src/index.ts --compile --outfile=dist/namewastaken",
    "install:global": "bun run build && cp dist/namewastaken /usr/local/bin/namewastaken",
    "test": "bun test",
    "test:integration": "bun test src/__tests__/integration.test.ts",
    "fmt": "oxfmt --write src/",
    "fmt:check": "oxfmt --check src/"
  },
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "commander": "^12.1.0",
    "effect": "^3.12.5",
    "elysia": "^1.4.22",
    "elysia-mcp": "^0.1.0",
    "picocolors": "^1.1.1",
    "zod": "^3.24.2"
  }
}
